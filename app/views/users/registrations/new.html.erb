
<div class="common-modal__overlay-static">
  <div class="common-modal" id="signup-modal">
    <div class="common-modal__header">
      <h2 class="common-modal__title">
        新規登録
      </h2>
      <div class="common-modal__subtitle">
        <%= link_to "ログインはこちら", new_user_session_path %>
      </div>
    </div>
    <div class="common-modal__body">
      <div class="common-form">

        <div class="common-modal__divider">
          <span>Emailで新規登録</span>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "example@gmail.com" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password" ,:placeholder => "パスワード" %>
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",:placeholder => "確認用のパスワード" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録する", class:"square-btn disabled", id:"registration-btn" %>
          </div>
        <% end %>
        <p class="common-modal__subtitle" style="margin-top: 8px;">
          <%= link_to "確認メールが届かない", new_user_confirmation_path %>
        </p>
      </div>
    </div>
    <div class="common-modal__footer">

    </div>
</div>
    
<div class="common-loading-overlay">
  <div class="common-loading">
    <div class="common-loading__text-wrapper">
      ユーザー作成中...
    </div>
  </div>
</div>

<script>
$( document ).ready(function(){
    $('#new_user').submit(function(){
        $(".common-loading-overlay").css("display", "flex")
    });

});
</script>